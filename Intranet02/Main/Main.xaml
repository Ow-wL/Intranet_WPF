<Window x:Class="Intranet02.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intranet02"
        mc:Ignorable="d"
        Title="SHIBA STAFF" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <!-- 스타일 정의 -->
    <Window.Resources>
        <Style TargetType="Button">
            <!-- 기본 배경색 제거 -->
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Pretendard SemiBold"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               FontSize="{TemplateBinding FontSize}" 
                               FontWeight="{TemplateBinding FontWeight}" 
                               FontFamily="{TemplateBinding FontFamily}" 
                               Foreground="{TemplateBinding Foreground}"/>
                        <ControlTemplate.Triggers>
                            <!-- 마우스 오버 시 글자색 변경 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="GridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="222"/>
            <!-- 왼쪽 메뉴 -->
            <ColumnDefinition Width="*"/>
            <!-- 오른쪽 콘텐츠 -->
        </Grid.ColumnDefinitions>

        <!-- 메뉴바 -->
        <StackPanel Background="#FF161618">
            <Image x:Name="imgStar" Height="142" Width="141" Source="/Main/9004759_star_favorite_award_like_icon.png"/>
            <TextBlock x:Name="tbStaff" Text="SHIBA STAFF" 
            FontSize="28" FontWeight="Bold" 
            TextAlignment="Center" Foreground="#FFFFB922" FontFamily="Pretendard ExtraBold"/>
            <Rectangle Height="2" Width="180" Fill="#FF757E85" HorizontalAlignment="Center" Margin="0,5,0,5"/>

            <Button x:Name="btnMain" Content="메인" Margin="10" Click="btnMain_Click"/>
            <Button x:Name="btnPost" Content="게시판" Margin="10" Click="btnPost_Click"/>
            <Button x:Name="btnAnswer" Content="해결방법" Margin="10"/>
            <Button x:Name="btnCS" Content="고객센터" Margin="10"/>
            <Button x:Name="btnSetting" Content="설정" Margin="10"/>
            <Button x:Name="btnAdmin" Content="관리메뉴" Margin="10"/>

            <Label x:Name="lblNickname" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                FontSize="22" Foreground="#FFE0E0E0" Margin="0,190,0,0">
                <TextBlock>
                    <Run Text="닉네임: " FontFamily="Pretendard ExtraBold"/>
                    <Run Text="😊" FontFamily="Segoe UI Emoji"/> 
                </TextBlock>
            </Label>
        </StackPanel>

        <!-- 메인 콘텐츠 -->
        <Grid Grid.Column="1" x:Name="ContentArea" Background="#FF09090B"/>
    </Grid>
</Window>
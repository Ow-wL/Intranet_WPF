<Window x:Class="Intranet02.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intranet02"
        mc:Ignorable="d"
        Title="SHIBA STAFF" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <!-- 메뉴바 영역 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="222"/>
            <!-- 메뉴바 너비 -->
            <ColumnDefinition/>
            <!-- 나머지 콘텐츠 -->
        </Grid.ColumnDefinitions>

        <!-- 메뉴바 -->
        <StackPanel Background="#FF161618">
            <Image x:Name="imgStar" Height="142" Width="141" Source="/Main/9004759_star_favorite_award_like_icon.png"/>
            <TextBlock x:Name="tbStaff" Text="SHIBA STAFF" 
            FontSize="28" FontWeight="Bold" 
            TextAlignment="Center" Foreground="#FFFFB922" FontFamily="Pretendard ExtraBold"/>
            <Rectangle Height="2" Width="180" Fill="#FF757E85" HorizontalAlignment="Center" Margin="0,5,0,5"/>

            <Button x:Name="btnMain" Content="메인" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="24" Margin="10" FontWeight="Bold" Width="140" FontFamily="Pretendard SemiBold"/>
            <Button x:Name="btnPost" Content="게시판" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="24" Margin="10" FontWeight="Bold" Width="140" FontFamily="Pretendard SemiBold"/>
            <Button x:Name="btnAnswer" Content="해결방법" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="24" Margin="10" FontWeight="Bold" Width="140" FontFamily="Pretendard SemiBold"/>
            <Button x:Name="btnCS" Content="고객센터" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="24" Margin="10" FontWeight="Bold" Width="140" FontFamily="Pretendard SemiBold"/>
            <Button x:Name="btnSetting" Content="설정" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="24" Margin="10" FontWeight="Bold" Width="140" FontFamily="Pretendard SemiBold"/>
            <Button x:Name="btnAdmin" Content="관리메뉴" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="24" Margin="10" FontWeight="Bold" Width="140" FontFamily="Pretendard SemiBold"/>
        </StackPanel>

        <!-- 메인 콘텐츠 -->
        <Grid Background="#FF08080A" Margin="0,0,-12,0" Grid.Column="1">
            <!-- 여기에 메인 콘텐츠를 추가 -->
        </Grid>
    </Grid>
</Window>
<UserControl x:Class="Intranet02.Post"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             Height="734.04" Width="978" Background="#FF09090B">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="88*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="378*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10" Grid.ColumnSpan="3">
            <TextBlock Text="게시판" FontSize="24" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="게시글을 작성하여 SHIBA 대시보드 이용자들과 소통하세요." 
                       FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Filters -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10" HorizontalAlignment="Left" Grid.ColumnSpan="3">
            <DatePicker Width="140" Margin="0,0,10,0"/>
            <ComboBox Width="140" Margin="0,0,10,0" 
                      mah:TextBoxHelper.Watermark="카테고리 선택">
                <ComboBoxItem Content="전체"/>
                <ComboBoxItem Content="공지사항"/>
                <ComboBoxItem Content="전달사항"/>
                <ComboBoxItem Content="휴가신청"/>
            </ComboBox>
            <TextBox Width="200" Margin="0,0,10,0" 
                     mah:TextBoxHelper.Watermark="제목 입력"/>
            <TextBox Width="200" Margin="0,0,10,0" 
                     mah:TextBoxHelper.Watermark="작성자 입력"/>
            <Button Content="조회" Width="80" Margin="0,0,10,0"/>
            <Button Content="초기화" Width="80"/>
        </StackPanel>

        <!-- Write Button -->
        <Button Content="글쓰기" Grid.Row="2" HorizontalAlignment="Right" Width="80" Margin="0,3,0,491" Grid.Column="2"/>

        <!-- 게시글 목록 -->
        <DataGrid Grid.Row="2" Margin="0,10,0,10"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  IsReadOnly="True" Grid.ColumnSpan="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="카테고리" Width="*" Binding="{Binding Category}"/>
                <DataGridTextColumn Header="제목" Width="2*" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="작성자" Width="*" Binding="{Binding Author}"/>
                <DataGridTextColumn Header="조회" Width="*" Binding="{Binding Views}"/>
                <DataGridTextColumn Header="작성일" Width="*" Binding="{Binding Date}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Left" Grid.Column="2" Margin="229,0,0,0">
            <Button Content="&lt;" Width="30" Margin="5"/>
            <TextBlock Text="1 / 2" VerticalAlignment="Center" Foreground="White" Margin="5"/>
            <Button Content="&gt;" Width="30" Margin="5"/>
        </StackPanel>
        <mah:FlipView Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0,0,491" Grid.RowSpan="2"/>
    </Grid>
</UserControl>

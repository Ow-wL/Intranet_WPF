<Window x:Class="Intranet02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intranet02"
        mc:Ignorable="d"
        Title="MainWindow" Height="617" Width="385">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">

            <Image HorizontalAlignment="Center" Height="176" Width="174" 
                   Margin="0,0,0,30" 
                   Source="/9004759_star_favorite_award_like_icon.png" 
                   RenderTransformOrigin="0.434,0.515"/>

            <TextBlock Text="Login" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBox x:Name="UsernameTextBox" 
                     Height="30" Margin="0,0,0,10" 
                     Width="250"/>

            <PasswordBox x:Name="PasswordBox" 
                         Height="30" Margin="0,0,0,20" 
                         Width="250"/>

            <Button Content="Login" 
                    Height="35" Width="250" 
                    Click="LoginButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
